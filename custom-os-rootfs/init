#!/gh2l



define init_bootdev string \
	put string " Enter boot device: "
	define boot_dev input
	
	mount conc /dev/ boot_dev /root vfat


	put string " Content of root directory is: "

	cd /root
	fork exec int 1 /ls .		NOT NEEDED	/ls should be /root/bin/ls		COMMENT
					Should FORK all files from /root/bin to / ?		COMMENT
\



mount none /dev devtmpfs
mount none /sys sysfs		DOES NOT WORK
mount none /proc proc		DOES NOT WORK

sleep int 2
eval init_bootdev
